<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.kr.masimaro.onrreg.OnrRegShopActivity1">


    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="환영합니다"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="마시마로 입점하기(1/3)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/textInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:text="필수 정보를 입력해주세요"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edTextId"
        android:layout_width="313dp"
        android:layout_height="36dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/image_add_background"
        android:ems="10"
        android:hint="아이디*(4~20자)"
        android:inputType="textPersonName"
        android:paddingLeft="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edTextPw"
        android:layout_width="313dp"
        android:layout_height="36dp"
        android:layout_marginTop="264dp"
        android:background="@drawable/image_add_background"
        android:ems="10"
        android:hint="비민번호*(영문+숫자, 8~20자)"
        android:inputType="textPersonName"
        android:paddingLeft="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edTextPwRe"
        android:layout_width="313dp"
        android:layout_height="36dp"
        android:layout_marginTop="312dp"
        android:background="@drawable/image_add_background"
        android:ems="10"
        android:hint="비밀번호 재확인*"
        android:inputType="textPersonName"
        android:paddingLeft="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edTextEmailFront"
        android:layout_width="138dp"
        android:layout_height="36dp"
        android:layout_marginTop="364dp"
        android:background="@drawable/image_add_background"
        android:ems="10"
        android:hint="이메일 앞자리*"
        android:inputType="textPersonName"
        android:paddingLeft="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="372dp"
        android:text="\@"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/edTextEmailBack"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edTextEmailFront"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edTextEmailBack"
        android:layout_width="138dp"
        android:layout_height="36dp"
        android:layout_marginTop="364dp"
        android:background="@drawable/image_add_background"
        android:ems="10"
        android:hint="이메일 뒷자리*"
        android:inputType="textPersonName"
        android:paddingLeft="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edTextName"
        android:layout_width="313dp"
        android:layout_height="37dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/image_add_background"
        android:ems="10"
        android:hint="이름*"
        android:inputType="textPersonName"
        android:paddingLeft="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edTextPhoneNum"
        android:layout_width="313dp"
        android:layout_height="37dp"
        android:layout_marginTop="476dp"
        android:background="@drawable/image_add_background"
        android:ems="10"
        android:hint="휴대폰*"
        android:inputType="textPersonName"
        android:paddingLeft="8sp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="322dp"
        android:layout_height="43dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#42e9f5"
        android:text="가게 정보 입력하기"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edTextPhoneNum" />

</androidx.constraintlayout.widget.ConstraintLayout>

